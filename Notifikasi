import java.util.Date;

/**
 *
 * @author lenovo
 */

public class Notifikasi {
    private Date batasWaktu;
    private String infoTerbaru;

    public String getInfoTerbaru() {
        return infoTerbaru;
    }

    public Date getBatasWaktu() {
        return batasWaktu;
    }

    public void setBatasWaktu(Date batasWaktu) {
        this.batasWaktu = batasWaktu;
    }

    public void kirimNotifikasi(String pesan) {
        // Simulasi pengiriman notifikasi, misalnya ke email atau pesan singkat
        System.out.println("Notifikasi: " + pesan);
    }

    public void aturBatasWaktu(Date batasWaktu) {
        this.batasWaktu = batasWaktu;
    }

    public void setInfoTerbaru(String infoTerbaru) {
        this.infoTerbaru = infoTerbaru;
    }
}
