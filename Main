//        anggota1.pinjamBuku(buku1, 4);
//        System.out.println();
//        anggota1.pinjamBuku(buku2, 11);
//
//        System.out.println();
//
//        buku1.informasiBuku();
//        System.out.println();
//        buku2.informasiBuku();
//        
//        System.out.println();
//        
//        anggota1.lihatRiwayatPeminjaman();
//        System.out.println();
//        
//        anggota1.kembalikanBuku(buku1);
//        System.out.println();
//        anggota1.kembalikanBuku(buku2);
//        
//        System.out.println();
//        buku1.informasiBuku();
//        System.out.println();
